{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks"  : [
        {
            "label"         : "Make",
            "type"          : "shell",
            "command"       : "cd build; make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label"         : "CMake",
            "type"          : "shell",
            "command"       : "rm -rf build; mkdir build; cd build; cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON ..",
            "problemMatcher": []
        }
    ]
}